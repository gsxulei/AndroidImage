<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="@dimen/commons_dialog_ask_width"
	android:layout_height="@dimen/commons_dialog_ask_height"
	android:layout_gravity="center"
	android:background="@drawable/commons_bg_dialog_ask"
	android:orientation="vertical">

	<TextView
		android:id="@+id/commons_dialog_ask_content"
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_marginBottom="10dp"
		android:layout_marginLeft="15dp"
		android:layout_marginRight="15dp"
		android:layout_marginTop="10dp"
		android:layout_weight="2"
		android:gravity="center"
		android:textColor="@color/CommonsTextColor"
		android:textSize="18sp"/>

	<View style="@style/CommonsLine"/>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="46dp"
		android:orientation="horizontal">

		<TextView
			android:id="@+id/commons_dialog_ask_cancel"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_weight="2"
			android:clickable="true"
			android:focusable="true"
			android:gravity="center"
			android:text="@string/commons_dialog_ask_cancel"
			android:textColor="@color/CommonsTextHintColor"
			android:textSize="16sp"/>

		<View style="@style/CommonsVerticalLine"/>

		<TextView
			android:id="@+id/commons_dialog_ask_confirm"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_weight="2"
			android:clickable="true"
			android:focusable="true"
			android:gravity="center"
			android:text="@string/commons_dialog_ask_confirm"
			android:textColor="@color/colorPrimary"
			android:textSize="16sp"/>

	</LinearLayout>
</LinearLayout>